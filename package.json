{
  "name": "@hcb-consulting/test-rig",
  "version": "1.0.0",
  "type": "module",
  "description": "Multi-agent testing infrastructure for monoliths and microservices",
  "main": "dist/index.js",
  "bin": {
    "test-rig": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "cp -r src/templates dist/",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "link": "npm link",
    "deploy": "npm run build && npm publish",
    "install-global": "npm run build && npm link"
  },
  "keywords": [
    "testing",
    "vitest",
    "pytest",
    "testcontainers",
    "multi-agent",
    "parallel-testing",
    "test-automation",
    "claude-code"
  ],
  "author": "HCB Consulting ME",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HCB-Consulting-ME/test-rig"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "inquirer": "^9.2.12",
    "js-yaml": "^4.1.0",
    "globby": "^14.0.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "testcontainers": "^10.4.0",
    "@faker-js/faker": "^8.3.1"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "@types/node": "^20.10.6",
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/fs-extra": "^11.0.4",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "prettier": "^3.1.1"
  }
}
