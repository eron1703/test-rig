[Unit]
Description=Test-Rig API Server
Documentation=https://github.com/HCB-Consulting-ME/test-rig
After=network.target

[Service]
Type=simple
User=testrig
Group=testrig
WorkingDirectory=/opt/test-rig
ExecStart=/usr/bin/node /opt/test-rig/dist/cli/index.js serve --port 8080 --host 0.0.0.0
Restart=always
RestartSec=10

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/test-rig

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=test-rig-api

[Install]
WantedBy=multi-user.target
